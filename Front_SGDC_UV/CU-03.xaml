        <TextBox x:Name="tbxRFC" HorizontalAlignment="Left" Margin="286,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="31"/>

        <Border CornerRadius="10,0,0,10" Margin="0,0,798,0">
