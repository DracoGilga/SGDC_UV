        <Label x:Name="lbApellidoMaterno" Content="Apellido Materno:" HorizontalAlignment="Left" Margin="137,185,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="143" Background="#FF3AA9AD" Foreground="White"/>
